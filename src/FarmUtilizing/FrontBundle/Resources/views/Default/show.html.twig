{% extends 'FrontBundle::base.show.html.twig' %}
{% block body %}
    <script src="{{ asset('client/js/google_map.js') }}"></script>

    <div class="container-projects">
        <div class="clearfix hidden-xs" style="width:100%; height:10px;"></div>
        <div class="container">
            <div class="page-header" id="projects">
                <h1 class="text-center text-danger">PROJECTS<br/><span class="fa fa-paint-brush"></span></h1>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default" style="padding: 100px">
                        <div class="panel-body">
                            <img src="{{ asset(post.imagePath) }}" class="img-responsive"/>
                            <h3>{{ post.title }}</h3>
                            <br><br><br>
                            <!-- シェアボタン -->
                            <div id="" class="SnsLink">
                                　　
                                <ul class="SnsLink__block">
                                    <li class="SnsLink__item">
                                        <a class="SnsLink__link--facebook" href="http://www.facebook.com/share.php?">Facebook</a>
                                    </li>
                                    <li class="SnsLink__item">
                                        <a class="SnsLink__link--twitter"
                                           href="https://twitter.com/share?url=">Twitter</a>
                                    </li>
                                    <li class="SnsLink__item">
                                        <a class="SnsLink__link--line" href="http://line.me/R/msg/text/?">LINE</a>
                                    </li>
                                </ul>
                            </div>
                            <!-- /シェアボタン -->
                            <p>{{ post.body }}</p>
                            <p>{{ post.prefArea }}</p>
                            <ul class="list-unstyled ">
                                {% for tag in post.tags %}
                                    <li class="btn btn-default">{{ tag.tagName }}</li>
                                {% endfor %}
                            </ul>
                            {#<img src="{{ asset(post.imagePath2) }}" class="img-responsive"/>#}

                            <div id="google_map" style="width: 600px; height: 600px"></div>
                            <script>
                                $(document).ready(function () {
                                    googlemap_init('google_map', '{{ post.prefArea }}');
                                });
                            </script>
                            <br><br><br>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-5">
                                        <img src="{{ asset('client/images/to_use.png') }}" class="img-responsive"/>
                                    </div>
                                    <div class="col-md-5">
                                        <img src="{{ asset('client/images/tokengaku.png') }}" class="img-responsive"/>
                                    </div>
                                    <div class="col-md-2">
                                    </div>

                                </div>
                            </div>
                            <br><br><br>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix hidden-xs" style="width:100%; height:50px;"></div>
    </div>
{% endblock %}
